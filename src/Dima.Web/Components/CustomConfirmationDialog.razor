<MudDialog>
    <TitleContent>
        <MudText Typo="Typo.h6">@Title</MudText>
    </TitleContent>
    <DialogContent>
        <MudText Typo="Typo.caption">@Message</MudText>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">@CancelText</MudButton>
        <MudButton Variant="Variant.Filled" Color="@Color" OnClick="Confirm">@YesText</MudButton>
    </DialogActions>
</MudDialog>

@code
{
    [CascadingParameter] 
    protected MudDialogInstance MudDialog { get; set; } = null!;

    [Parameter] public string Title { get; set; } = string.Empty;
    [Parameter] public string Message { get; set; } = string.Empty;
    [Parameter] public string YesText { get; set; } = string.Empty;
    [Parameter] public string CancelText { get; set; } = string.Empty;
    [Parameter] public Color Color { get; set; } = Color.Success;
    
    protected void Confirm() => MudDialog.Close(DialogResult.Ok(true));
    protected void Cancel() => MudDialog.Cancel();
}
