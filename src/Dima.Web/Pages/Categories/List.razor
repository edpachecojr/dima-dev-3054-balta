@page "/categories"
@inherits ListCategoriesPage

<MudText Typo="Typo.h3">Categorias</MudText>
<div class="d-flex justify-end">
    <MudButton
        Variant="Variant.Filled"
        Color="Color.Primary"
        StartIcon="@Icons.Material.TwoTone.Add"
        Href="/categories/add">
        NOVA CATEGORIA
    </MudButton>
</div>

<MudDataGrid
    Class="mt-4"
    Items="@Categories"
    Filterable="true"
    QuickFilter="Filter"
    Hideable="true">
    <ToolBarContent>
        <MudText Typo="Typo.h6">Categorias</MudText>
        <MudSpacer/>
        <MudTextField
            @bind-Value="SearchTerm"
            Placeholder="Filtrar..."
            Adornment="Adornment.Start"
            AdornmentIcon="@Icons.Material.Filled.Search"
            Immediate="true"
            IconSize="Size.Medium"
            Class="mt-0"/>
    </ToolBarContent>
    <Columns>
        <PropertyColumn Property="c => c.Id" Title="#"/>
        <PropertyColumn Property="c => c.Title" Title="Título"/>
        <PropertyColumn Property="c => c.Description" Title="Descrição"/>
        <TemplateColumn Class="d-flex justify-end">
            <CellTemplate>
                <MudStack Row>
                    <MudIconButton
                        Icon="@Icons.Material.Filled.Edit"
                        Href="@($"/categories/edit/{context.Item.Id}")"
                        Color="Color.Primary"
                    />
                    <MudIconButton
                        Icon="@Icons.Material.Filled.Delete"
                        Color="Color.Error"
                        aria-label="Exluir"
                        OnClick="() => OnDeleteButtonClickedAsync(context.Item.Id, context.Item.Title)"
                    />
                </MudStack>
            </CellTemplate>
        </TemplateColumn>
    </Columns>
</MudDataGrid>