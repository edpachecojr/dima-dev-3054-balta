<CascadingAuthenticationState>
    <Router AppAssembly="@typeof(App).Assembly">
        <Found Context="routeData">
            <AuthorizeView RouteData="@routeData" DefaultLayout="@typeof(MainLayout)">
                <NotAuthorized>
                    <h1>Você não tem acesso a essa funcionalidade</h1>
                </NotAuthorized>
            </AuthorizeView>
            @*<FocusOnNavigate RouteData="@routeData" Selector="h1" />*@
        </Found>
        <NotFound>
            <PageTitle>Página não encontrada</PageTitle>
            <LayoutView Layout="@typeof(MainLayout)">
                <p role="alert">Não foi possível encontrar a página solicitada</p>
            </LayoutView>
        </NotFound>
    </Router>

</CascadingAuthenticationState>